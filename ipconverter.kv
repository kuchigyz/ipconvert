<MainWindow>:
    font_name: "DroidSansMono"
    name: "main"
    ip: ip
    mask: mask
    iplable: iplable
    masklable: masklable

    Label:
        id: iplable
        text: "IP Address:"
        pos_hint: {"x": 0.2, "top": 0.94}
        size_hint: 0.6,0.05
    Label:
        id:masklable
        text: "Subnet Mask"
        pos_hint: {"x": 0.2, "top": 0.83}
        size_hint: 0.6,0.05
    Button:
        id: ip
        text: ""
        pos_hint: {"x": 0.2, "top": 0.89}
        size_hint: 0.6,0.07
        on_release:
            root.switchToIp()
    Button:
        id: mask
        text: ""
        pos_hint: {"x": 0.2, "top": 0.78}
        size_hint: 0.6,0.07
        on_release:
            root.switchToMask()
